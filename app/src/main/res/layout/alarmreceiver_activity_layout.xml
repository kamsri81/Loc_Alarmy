<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlightblack">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Dismiss alarm"
        android:id="@+id/cancelalarm"
        android:clickable="true"
        android:background="@drawable/cancelalarmbutton"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="snooze alarm"
        android:textColor="@color/colorblack"
        android:id="@+id/snoozealarm"
        android:background="@drawable/button_bg_round"
        android:clickable="true"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true" />


    <TextClock
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:typeface="normal"
        android:textColor="@color/colorwhite"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/cancelalarm"
        android:layout_alignStart="@+id/cancelalarm"
        android:layout_marginTop="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning!"
        android:textColor="@color/colorwhite"
        android:textSize="18dp"
        android:layout_below="@+id/textClock"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/bell"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
